<h1>User#new</h1>
<p>Find me in app/views/user/new.html.erb</p>

<h1>Create a new user</h1>

<p>
  <% if @user.errors.any? %>
    <ul>
      <% @user.errors.full_messages.each do |error| %>
        <li><%= error %></li>
      <%end%>
    </ul>
  <%end%>
</p>

<%= form_with scope: :user, url: create_user_url, local: true do |f| %>

<p>
<%= f.label :name %><br/>
<%= f.text_field :name %>
</p>
<p>
<%= f.label :age %><br/>
<%= f.text_field :age %>
</p>
<p>
<%= f.label :month_of_birth %><br/>
<%= f.text_field :month_of_birth %>
</p>
<p>
<%= f.label :year_of_birth %><br/>
<%= f.text_field :year_of_birth %>
</p>
<p>
<%= f.label :favorite_color %><br/>
<%= f.text_field :favorite_color %>
</p>

<%= f.submit %>

<% end %>
